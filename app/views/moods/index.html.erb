<h1>Listing moods</h1>

<table>
  <tr>
    <th>Message</th>
    <th>Mood</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @moods.each do |mood| %>
  <tr>
    <td><%= mood.message %></td>
    <td><%= mood.mood %></td>
    <td><%= mood.user_id %></td>
    <td><%= link_to 'Show', mood %></td>
    <td><%= link_to 'Edit', edit_mood_path(mood) %></td>
    <td><%= link_to 'Destroy', mood, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

